    <script>
        // Função para trocar a imagem principal
        function changeImage(newSrc) {
            const mainImage = document.getElementById('main-product-image');
            const loadingSpinner = document.getElementById('loading-spinner');
            
            // Mostra o spinner enquanto a nova imagem carrega
            loadingSpinner.classList.remove('hidden');

            const newImage = new Image();
            newImage.onload = () => {
                mainImage.src = newSrc;
                loadingSpinner.classList.add('hidden');
            };
            newImage.onerror = () => {
                mainImage.src = 'https://placehold.co/800x800/f05545/ffffff?text=Erro+ao+carregar';
                loadingSpinner.classList.add('hidden');
                console.error('Erro ao carregar a imagem: ' + newSrc);
            };
            newImage.src = newSrc;
        }

        // Dados completos dos produtos
        const allProducts = [
            {
                id: 1,
                name: "Brinco Gota Prata",
                price: "R$ 89,90",
                image: "https://placehold.co/300x300/a7a7a7/ffffff?text=Brinco"
            },
            {
                id: 2,
                name: "Anel Solitário Minimalista",
                price: "R$ 75,50",
                image: "https://placehold.co/300x300/c7c7c7/ffffff?text=Anel"
            },
            {
                id: 3,
                name: "Pulseira Elo Português",
                price: "R$ 150,00",
                image: "https://placehold.co/300x300/e7e7e7/ffffff?text=Pulseira"
            },
            {
                id: 4,
                name: "Pingente Trevo da Sorte",
                price: "R$ 45,00",
                image: "https://placehold.co/300x300/a7a7a7/ffffff?text=Pingente"
            },
            {
                id: 5,
                name: "Corrente de Prata Lisa",
                price: "R$ 95,00",
                image: "https://placehold.co/300x300/d4d4d4/333333?text=Corrente"
            },
            {
                id: 6,
                name: "Brinco Argola Pequena",
                price: "R$ 65,00",
                image: "https://placehold.co/300x300/c0c0c0/ffffff?text=Argola"
            },
            {
                id: 7,
                name: "Anel de Falange",
                price: "R$ 40,00",
                image: "./imagens/8.png"
            },
            {
                id: 8,
                name: "Colar Ponto de Luz",
                price: "R$ 110,00",
                image: ""
            }
        ];

        // Função para pegar 4 produtos aleatórios
        function getRandomProducts(arr, num) {
            const shuffled = [...arr].sort(() => 0.5 - Math.random());
            return shuffled.slice(0, num);
        }

        // Função para renderizar os produtos na página
        function renderRelatedProducts() {
            const container = document.getElementById('related-products-container');
            container.innerHTML = ''; // Limpa o conteúdo antes de renderizar
            
            const productsToRender = getRandomProducts(allProducts, 4);

            productsToRender.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'bg-white rounded-xl shadow-md p-4 transition-transform transform hover:scale-105';
                
                productCard.innerHTML = `
                    <a href="#" class="block">
                        <img src="${product.image}" alt="${product.name}" class="w-full h-auto rounded-lg object-cover mb-4">
                        <h3 class="text-lg font-semibold text-gray-800">${product.name}</h3>
                        <p class="text-blue-600 font-bold mt-1">${product.price}</p>
                    </a>
                `;
                container.appendChild(productCard);
            });
        }

        // Renderiza os produtos quando a página é carregada
        document.addEventListener('DOMContentLoaded', renderRelatedProducts);
    </script>
